<p id="notice"><%= notice %></p>

<h1>Kittens</h1>

<% @kittens.each_with_index do |kitten, idx| %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= idx + 1 %>. <%= link_to kitten.name, kitten %></td>
        <td><%= link_to 'Edit', edit_kitten_path(kitten) %></td>
        <td><%= link_to 'Delete', kitten, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Kitten', new_kitten_path %>
